{
  "name": "visprit",
  "version": "0.1.3",
  "description": "A modern JavaScript animation toolkit for glancing and scrolling.",
  "author": "Jimbo Quijano",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "animation",
    "effects",
    "scroll",
    "glance",
    "javascript",
    "library",
    "frontend",
    "attributes"
  ],
  "main": "dist/visprit.umd.js",
  "module": "dist/visprit.es.js",
  "exports": {
    ".": {
      "import": "./dist/visprit.es.js",
      "require": "./dist/visprit.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.3.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "terser": "^5.31.1",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimboquijano/visprit.git"
  },
  "bugs": {
    "url": "https://github.com/jimboquijano/visprit/issues"
  },
  "homepage": "https://github.com/jimboquijano/visprit#readme"
